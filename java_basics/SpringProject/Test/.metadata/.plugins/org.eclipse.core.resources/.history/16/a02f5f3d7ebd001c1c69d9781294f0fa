	<bean id="myPet" class="spring_introdaction.Dog"></bean>
	<!-- Внедрение зависимости с помощью конструктора -->
	<!-- <bean id="myPerson" class="spring_introdaction.Person"> -->
		<!--<constructor-arg ref="myPet"/> -->
	<!-- </bean> -->

	<!--Инедрение зависимостей с помощью сеттеров - должен использоваться конструктор 
		без аргументов -->
	<!-- Используется сеттер setPet из класса Person -->
	<!-- using setter setPet from class Person -->
	<bean id="myPerson" class="spring_introdaction.Person">
		<property name="pet" ref="myPet" />
		<property name="surname" value="${person.surname}" />
		<property name="age" value="${person.age}" />
	</bean>

